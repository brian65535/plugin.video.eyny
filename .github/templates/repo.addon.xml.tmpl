<?xml version="1.0" encoding="UTF-8"?>
<addon id="{repo_addon_id}" name="{repo_addon_name}" version="{repo_addon_version}" provider-name="{repo_addon_provider}">
    <extension point="xbmc.addon.repository">
        {repo_dir}
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">{repo_addon_summary}</summary>
        <description lang="en">This repository contains addons that are made by Lydian</description>
        <platform>all</platform>
        <license>GPL-3.0</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>{fanart_file}</fanart>
        </assets>
    </extension>
</addon>
